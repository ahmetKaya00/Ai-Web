@model Bootcamp

<div class="container mb-5">
    <div class="row">
        <div class="col-md-3">
            <div class="text-center mb-3">
            <img src="~/img/@Model.Image" class="rounded-circle img-thumnail" style="width: 250px; height: 250px" alt="">
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Kullanıcı Bilgileri</h4>
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.BootcampName</h2>
                </div>
                <div class="mt-3">
                    <a asp-controller="Bootcamp" asp-action="Edit" asp-route-id="@Model.BootcampId" class="btn btn-warning m-2">Edit</a>
                    <a href="#" onclick="confirmDelete(@Model.BootcampId)" class="btn btn-danger">Delete</a>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="card-title">Kayıtlı Kullanıcılar</h4>
                </div>
                <div class="card-body">
                    <ul>
                            @foreach (var item in Model.BootcampKayitlar)
                            {
                                <li>@item.Ogrenci.AdSoyad</li>
                            }
                        </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(BootcampId){
        if(confirm('Öğrenciyi silmek istiyor musunuz ?')){
            fetch('@Url.Action("Delete","Bootcamp")/'+BootcampId,{
                method: 'POST',
                headers:{
                    'Content-Type': 'aplication/json',
                    'X-Requested-with':'XMLHttpRequest'
                }
            })
            .then(response=>{
                if(response.ok){
                    window.location.href='@Url.Action("Index","Bootcamp")';
                }else{
                    alert('Silme işlemi gerçekleştirilmedi.');
                }
            })
            .catch(error=>{
                console.error("Silme işlemi sırasında hata oluştu.",error);
                alert('Silme işlemi gerçekleştirilmedi.');
            })
        }
    }
</script>