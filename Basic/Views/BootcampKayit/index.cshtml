@model IEnumerable<BootcampKayit>

    <h2>Öğrenci Bootcamp Listesi</h2>
    <a asp-controller="BootcampKayit" asp-action="Create" class="btn btn-primary px-3">
        <i class="bi bi-plus-lg me-1"></i> Bootcamp Ekle
    </a>
    <hr>
    <table class="table table-borderd">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m=>m.KayitId)</th>
                <th>@Html.DisplayNameFor(m=>m.Ogrenci.AdSoyad)</th>
                <th>@Html.DisplayNameFor(m=>m.Bootcamp.BootcampName)</th>
                <th class="width: 125px">Settings</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.KayitId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bootcamp.BootcampName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>